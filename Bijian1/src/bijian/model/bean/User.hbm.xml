<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping package="bijian.model.bean">
   <class name="User" table="user" dynamic-insert="true" dynamic-update="true">
      <id name="username" column="username" type="string"> 
        <generator class="assigned"></generator>
      </id>
      <property name="nickname" column="nickname" type="string" not-null="true"/>  
      <property name="password" column="password" type="string" not-null="true"/>
      <property name="sex" column="sex" type="int"/>  
      <property name="age" column="age" type="int"/>
      <property name="province" column="province" type="string"/>  
      <property name="area" column="area" type="string"/>
      <property name="contellation" column="contellation" type="string"/>  
      <property name="photo" column="photo" type="string"/>
      <property name="loginState" column="loginState" type="int"/>  
      <property name="attentionNum" column="attentionNum" type="int"/>
      <property name="followingNum" column="followingNum" type="int"/>  
     
      
      <list name="sentenceList" table="sentence" inverse="true" cascade="none">
         <key column="author" not-null="true"/>
         <one-to-many class="Sentence"/>      
      </list>
      <list name="labelList" table="label" inverse="true" cascade="none">
         <key column="author" not-null="true"/>
         <one-to-many class="Label"/>       
      </list>   
      <list name="moodList" tabel="mood" inverse="true" not-null="true">
         <key column="author" not-null="true"/>
         <one-to-many class="Mood"/>
      </list>
      
      <bag name="attentionList" table="attention" inverse="false" order-by="time desc">
         <key column="self"/>
         <many-to-many column="attention" class="User"/>
      </bag>
      
      <bag name="followingList" table="following" inverse="false" order-by="time desc">
         <key column="self"/>
         <many-to-many column="following" class="User"/>
      </bag>
      
   </class>

</hibernate-mapping>