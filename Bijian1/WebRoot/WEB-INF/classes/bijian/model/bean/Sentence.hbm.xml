<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping package="bijian.model.bean">
    <class name="sentence" table="sentence" dynamic-update="true"  dynamic-insert="true">
       <id name="sentenceID" column="sentenceID" type="int">
          <generator class="identity"/>
       </id>
       <property name="content" column="content" type="string" not-null="true"/>
       <property name="createTime" column="createTime" type="date" not-null="true"/>
       <property name="goodNum" column="goodNum" type="int"/>
       <property name="commentNum" column="commentNum" type="int"/>
       <property name="forwardingNum" column="forwardingNum" type="int"/>
       
       <!--  一对多   sentence -> comments  -->
       <list name="commentList" table="comment" inverse="true" cascade="none">
          <key column="sentenceID"/>
          <on-to-many class="Comment"/>
       </list>
       <!--  多对一   sentences -> user  -->
       <many-to-one name="author" column="author" class="User" not-null="true" cascade="none"/>
   
   
    </class>


</hibernate-mapping>