<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="bijian.model.bean">
    <class name="Label" table="label" dynamic-insert="true"  dynamic-update="true">
       <id name="labelID" column="labelID" type="long">
          <generator class="native"/>
       </id>
       <property name="content" column="content" type="string"/>
       <property name="createTime" column="createTime" type="java.util.Date"/>
       <property name="objectType" column="objectType" type="java.lang.Integer"/>
       
       <many-to-one name="author" column="authorID" class="User"/>
       <many-to-one name="articleObject" column="objectID" class="ArticleObject" cascade="none"/>
    
    </class>

</hibernate-mapping>