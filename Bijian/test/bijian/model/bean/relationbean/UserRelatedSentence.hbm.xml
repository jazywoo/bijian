<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="bijian.model.bean.relationbean">
    <class name="UserRelatedSentence" table="userRelatedSentence" dynamic-update="true"  dynamic-insert="true">
       <id name="userRelatedSentenceID" column="userRelatedSentenceID" type="long">
          <generator class="native"/>
       </id>
       <property name="isSentenceActive" column="isSentenceActive" type="java.lang.Integer" ></property>
       <property name="createTime" column="createTime" type="java.util.Date"/>
       
       <!--  多对一    -->
       <many-to-one name="user" column="userID" class="bijian.model.bean.User" cascade="none"/>
       <many-to-one name="sentence" column="sentenceID" class="bijian.model.bean.Sentence" cascade="none"/>
       
    </class>


</hibernate-mapping>